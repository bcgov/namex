<UserControl x:Class="CustomControls.NumericUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="26" Width="130">
    <Border BorderThickness="1" BorderBrush="Gray" Margin="1" Grid.RowSpan="2">
        <Grid Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <TextBox Name="valueText" BorderThickness="0" Margin="3,0,3,0" Grid.RowSpan="2" />
            <RepeatButton Name="upButton" Click="upButton_Click" Grid.Column="1">
                <Path Fill="Black" Data="M 0 4 L 8 4 L 4 0 Z"/>
            </RepeatButton>
            <RepeatButton Name="downButton" Click="downButton_Click" Grid.Column="1" Grid.Row="1">
                <Path Fill="Black" Data="M 0 0 L 4 4 L 8 0 Z"/>
            </RepeatButton>
        </Grid>
    </Border>
</UserControl>