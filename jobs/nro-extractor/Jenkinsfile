                attachment.color = "#00FF00" // Lime Green
                notifySlack("nro-extractor-${BUILD_ID}", "#name-examination", "https://hooks.slack.com/services/${SLACK_TOKEN}", [attachment])
            }//end stage
        }//end node
    }//end pod template

    // Part 5 - deploy to prod

    stage('Deploy PROD') {

        node {
            SLACK_TOKEN = sh (
                script: """oc get secret/slack -o template --template="{{.data.token}}" | base64 --decode""",
                    returnStdout: true).trim()

            // send msg to slack
