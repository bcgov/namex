{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "notebook-report-bc-template",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "notebook-report",
                "creationTimestamp": null,
                "labels": {
                    "app": "notebook-report"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${GIT_REPO_URL}",
                        "ref": "master"
                    },
                    "contextDir": "jobs/notebook-report"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.6"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "notebook-report:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 0
            }
        }
    ],
    "parameters": [
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to your GIT repo.",
      "required": true,
      "value": "https://github.com/bcgov/namex"
    }
  ]  
}
